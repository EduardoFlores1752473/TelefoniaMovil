<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:id="@+id/cdCardView"
        android:layout_width="match_parent"
        android:layout_height="508dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgCardView"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/samsung" />

        <TextView
            android:id="@+id/txtSamsung"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgCardView"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Samsung"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgHuawei"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@id/imgCardView"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/huawie" />

        <TextView
            android:id="@+id/txtIphone"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgCardView"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Huawei"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/imgIphone"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_below="@+id/imgCardView"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/iphone" />

        <TextView
            android:id="@+id/txtHuawei"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgIphone"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Iphone"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgLg"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_below="@+id/imgHuawei"
            android:layout_alignLeft="@id/imgIphone"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/lg" />

        <TextView
            android:id="@+id/txtLg"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgIphone"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="LG"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgMotorola"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_below="@+id/imgIphone"
            android:layout_alignLeft="@id/imgIphone"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/motorola" />

        <TextView
            android:id="@+id/txtMotorola"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgMotorola"
            android:layout_marginLeft="163dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Motorola"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>